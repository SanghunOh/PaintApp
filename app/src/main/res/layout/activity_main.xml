<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_background"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/selectBrush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_pen_icon"
            android:background="@drawable/icon_pen"/>

        <LinearLayout
            android:id="@+id/brushGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/blackColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_pen_color"
                android:background="@drawable/black_background"/>
            <ImageButton
                android:id="@+id/redColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_pen_color"
                android:background="@drawable/red_background"/>
            <ImageButton
                android:id="@+id/blueColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_pen_color"
                android:background="@drawable/blue_background"/>
            <ImageView
                android:id="@+id/clear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_eraser_icon"
                android:background="@drawable/icon_eraser" />
            <Button
                android:id="@+id/btnAddPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add PDF"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:id="@+id/tvStorageInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage Info"
                android:layout_alignBaseline="@id/btnAddPdf"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp" />

        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:id="@+id/navigationView"
            android:layout_gravity="left"
            app:menu="@menu/draw_menu">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </RelativeLayout>
        </com.google.android.material.navigation.NavigationView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="#ffffff">
        <include layout="@layout/paint_view"/>

    </RelativeLayout>

</RelativeLayout>